
.container{
  width: 100vw;
  height: 100vh;
  background-color: blanchedalmond;
 
}
.stage{
  width: 100%;
  position: relative;
  
}
.bg{
  width: 100%;
  position: absolute;
}
.game-name{
  position: absolute;
  text-align: center;
  left: 50%;
  transform: translateX(-50%);
  top: 350rpx;
  width: 300rpx;
  height: 60rpx;
  font-size: 80rpx;
  letter-spacing: 8px;
  font-weight: bold;
  font-family: "Courier New", Courier, monospace;
}
.bg image{
  width: 100%;
  height: 740rpx;
}
.content{
  position: absolute;
  left: 40rpx;
  top: 40rpx;
  width: 660rpx;
  height: 660rpx;
  display: flex;
  flex-wrap: wrap;
}

.img3 {
  width: 33.33%;
  height: 33.33%;

}

.img4 {
  width: 25%;
  height: 25%;
}
.img image{
  width: 100%;
  height: 100%;
}

.img5 {
  width: calc(430px / 5);
  height: calc(430px / 5);
}
.top{
  display: flex;
}
.control{
  margin-top: 20rpx;
}
.btn{
  width: 250rpx;
  height: 83rpx;
  font-family: "Courier New", Courier, monospace;
  font-size: 43rpx;
  font-weight: bold;
  text-align: center;
  line-height: 83rpx;
  margin-left: 30rpx;
  margin-top: 20rpx;
  border-radius: 8rpx;
  background-color: rgba(0,0,0,0.15);
  /* border: 3px solid black; */
}

.base_img{
  width: 400rpx;
  height: 400rpx;
  position: relative;
}
.base_img .base_bg_img{
  position: absolute;
  width: 100%;
  height: 100%;
}
.base_img .base_main_img{
  position: absolute;
  width: 360rpx;
  height: 360rpx;
  left: 50%;
  top: 50%;
  transform: translateX(-50%) translateY(-50%);
}
