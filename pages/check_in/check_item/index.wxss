/* pages/daka/daka.wxss */
.daka{
 
  height: 150rpx;
  background-color: white;
  display: flex;
  letter-spacing: 10rpx;
  align-items:center;
  margin: 0 20rpx;
  border-radius: 20rpx;
  font-size: 35rpx;
  margin-top:30rpx;
}
.left{
  display: flex;
  flex: 3;
  margin-left: 30rpx;
  
}
.nums{
  margin-top: 20rpx;
  letter-spacing: 3rpx;
  font-size: 20rpx;
}
.left .icon{
  flex: 1.2;

}
.left .icon image{
  display:inline;
  
}
.left .text{
  flex: 2;
}
.left .time{
  flex: 2;
  position: relative;
  top: 20rpx;
}
.right{
  flex: 1;
  height: 100%;
  
}
.right .pressBox{
  display: flex;
  width: 100%;
  height: 100%;
  background-color: aquamarine;
  align-items: center;
  border-radius: 20rpx;
}
.right .pressBox image{
  flex: 1;
  width: 70%;
  height: 70%;
}
